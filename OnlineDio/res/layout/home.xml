<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:paddingLeft="3dp"
                android:paddingRight="2dp"
                android:layout_height="match_parent" android:background="#f6f6f6">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp" android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true" android:background="@drawable/navbar_1"
            android:id="@+id/relativeLayout" android:focusable="false">
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:id="@+id/imageButton"
                android:background="@drawable/home_option" android:paddingLeft="5dp" android:layout_marginLeft="5dp"/>
        <ImageButton
                android:layout_width="40dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:id="@+id/imageButton1"
                android:layout_alignParentRight="true"
                android:background="@drawable/home_internet" android:padding="1dp" android:layout_margin="6dp"
                />
    </RelativeLayout>
    <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:id="@+id/imageView" android:layout_alignLeft="@+id/relativeLayout"
            android:layout_below="@+id/relativeLayout" android:src="@drawable/home_contentfeeds"/>
    <ListView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lvListSongs"
            android:layout_alignLeft="@+id/relativeLayout"
            android:layout_below="@+id/imageView" android:divider="#d1d1d1"/>
</RelativeLayout>